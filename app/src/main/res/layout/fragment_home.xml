<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGreen"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Fragments.FragmentHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:fontFamily="@font/nastaleeq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Events    تقریبات"
                android:textColor="@color/golden"
                android:textSize="25sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:fontFamily="@font/nastaleeq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Activities    سرگرمیاں"
                android:textColor="@color/golden"
                android:textSize="25sp" />


        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/bankCard"
                android:layout_width="160dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout

                    android:id="@+id/imgbtn_playlist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/darkGreen"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView

                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/first"
                        android:padding="10dp"
                        android:src="@drawable/icon_play" />

                    <TextView
                        android:textSize="20sp"
                        android:fontFamily="@font/nastaleeq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/playlist"
                        android:textColor="@color/golden"
                        android:textStyle="bold" />

                    <!-- <View
                         android:layout_width="match_parent"
                         android:layout_height="1dp"
                         android:layout_margin="10dp"
                         android:background="@color/golden" />-->

                    <TextView

                        android:textSize="20sp"
                        android:fontFamily="@font/nastaleeq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="پلے لسٹ"
                        android:textColor="@color/golden" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/folderCard"
                android:layout_width="160dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/imgbtn_qibla"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/darkGreen"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView

                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/first"
                        android:padding="10dp"
                        android:src="@drawable/ic_qibla" />

                    <TextView
                        android:textSize="20sp"
                        android:fontFamily="@font/nastaleeq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/qibla_direction"
                        android:textColor="@color/golden"
                        android:textStyle="bold" />

                    <!-- <View
                         android:layout_width="match_parent"
                         android:layout_height="1dp"
                         android:layout_margin="10dp"
                         android:background="@color/golden" />-->

                    <TextView
                        android:textSize="20sp"
                        android:fontFamily="@font/nastaleeq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="قبلہ سمت"
                        android:textColor="@color/golden" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/ideasCard"
                android:layout_width="160dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/imgbtn_qaza_calculator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/darkGreen"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/first"
                        android:padding="10dp"
                        android:src="@drawable/ic_calculate" />

                    <TextView
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:fontFamily="@font/nastaleeq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/qaza_namaz_calculator"
                        android:textColor="@color/golden"
                        android:textStyle="bold" />

                    <!-- <View

                         android:layout_width="match_parent"
                         android:layout_height="1dp"
                         android:layout_margin="10dp"
                         android:background="@color/golden" />-->

                    <TextView
                        android:textSize="20sp"
                        android:fontFamily="@font/nastaleeq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="قضا نماز کیلکولیٹر"
                        android:textColor="@color/golden" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/filesCard"
                android:layout_width="160dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/imgbtn_share"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/darkGreen"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/first"
                        android:padding="10dp"
                        android:src="@drawable/ic_share_whote" />

                    <TextView
                        android:textSize="20sp"
                        android:fontFamily="@font/nastaleeq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/share_application"
                        android:textColor="@color/golden"
                        android:textStyle="bold" />

                    <!--<View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/golden" />-->

                    <TextView
                        android:textSize="20sp"
                        android:fontFamily="@font/nastaleeq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="شیئر"
                        android:textColor="@color/golden" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/feedbackCard"
                android:layout_width="340dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/imgbtn_donation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/darkGreen"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView

                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/first"
                        android:padding="10dp"
                        android:src="@drawable/icon_donate" />

                    <TextView
                        android:textSize="20sp"
                        android:fontFamily="@font/nastaleeq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/donate_us"
                        android:textColor="@color/golden"
                        android:textStyle="bold" />

                    <!-- <View
                         android:layout_width="match_parent"
                         android:layout_height="1dp"
                         android:layout_margin="10dp"
                         android:background="@color/golden" />-->

                    <TextView
                        android:textSize="20sp"
                        android:fontFamily="@font/nastaleeq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="عطیہ کے ذریعہ ہماری تنظیم میں اضافہ کرنے میں مدد کریں "
                        android:textColor="@color/golden" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Social Links"
            android:textColor="@color/golden"
            android:textSize="25sp" />

        <LinearLayout
            android:weightSum="3"
            android:layout_marginLeft="70dp"
            android:layout_width="match_parent"
            android:layout_marginRight="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_weight="1"
                android:id="@+id/btn_facebook"
                android:layout_width="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="50dp"
                android:src="@drawable/facebook" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_weight="1"
                android:id="@+id/btn_insta"
                android:layout_width="50dp"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="50dp"
                android:src="@drawable/instagram" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_weight="1"
                android:id="@+id/btn_twitter"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/twitter" />


        </LinearLayout>
    </LinearLayout>

</ScrollView>